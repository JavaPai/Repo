            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Your Addons Name">
            <info compressed="false">https://raw.githubusercontent.com/BartOtten/kodi-repo-bootstrap/_repo/addons.xml</info>
